<header>
  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <div class="container">
      <%= link_to 'PhotosApp', root_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav me-auto mb-2 mb-md-0 flex-grow-1">
          <li class="nav-item">
            <%= link_to 'Home', root_path, class: "nav-link", aria: {current: "page"} %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Link</a>
          </li>
          <li class="nav-item">
            <a class="nav-link disabled">Disabled</a>
          </li>
          <li class="ml-auto nav-item d-flex flex-row" id="user-auth-btns">
            <% if current_user %>
              <%= link_to 'Sign out', destroy_user_session_path, class: "nav-link btn btn-danger", aria: {current: "logged in"}, method: :delete %>
            <% else %>
              <%= link_to 'Sign in', new_user_session_path, class: "mr-2 nav-link btn btn-primary"%>
              <%= link_to 'Sign up', new_user_registration_path, class: "nav-link btn btn-primary"%>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>